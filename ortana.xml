<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

	<name>ORTANA</name>
	<creationDate>Novembre 2017</creationDate>
	<author>TIAFENO Finel</author>
	<authorEmail>finel@falicrea.com</authorEmail>
	<authorUrl>http://www.falicrea.com</authorUrl>
	<copyright>Copyright 2017, ORTANA</copyright>
	<license>Apache License 2.0</license>
	<version>0.0.5</version>
	<description>Description of the Ortana component ...</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<files folder="site">
		<filename>index.html</filename>
		<filename>ortana.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>

	<administration>
		<menu link='index.php?option=com_ortana'>ORTANA Dashboard</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>ortana.php</filename>
			<filename>controller.php</filename>
			<folder>sql</folder>
			<folder>models</folder>
			<folder>views</folder>
		</files>
	</administration>

</extension>